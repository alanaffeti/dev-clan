{% extends 'base.html.twig' %}
{% block body %}

	<div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">

		<div class="col-lg-6">

			<div class="card">
				<div class="card-body">

					<h1 class="card-title">Liste des utilisateurs</h1>

				</form>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Name</th>
							<th>Lastname</th>
							<th>Email</th>

							<th>
								delete
							</th>
                            <th>
                            bloquer
                            </th>
							<th>
								edit
							</th>


						</tr>
					</thead>
					<tbody>
						{% for user in user %}
							<tr>
								<td>{{ user.name }}</td>
								<td>{{ user.lastname }}</td>
								<td>{{ user.email }}</td>

								<td>

									<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

										<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
										<button class="btn btn-light">delete</button>
									</form>
                                    </td>
                                    <td>
                                    <form method="post" action="{{ path('admin_user', {'id': user.id}) }}" >

										
										<button class="btn btn-light">bloquer</button>
									</form>
								</td>
								<td>
									<a class="btn btn-success" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
								</td>
								


							</tr>
						{% endfor %}
					</tbody>
				</table>
			
			</div>
		</div>

	</div>


</div>{% endblock %}

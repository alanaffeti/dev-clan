									<a href="#" class="booking-doc-img">
										<img src="{{asset ('assets2/img/patients/patient.jpg')}} " alt="User Image">
									</a>
									<div class="profile-det-info">
										<h3>{{user.email}}</h3>
										
									</div>

								</div>
							</div>
						</div>
						{% if 'ROLE_USER' in app.user.roles %}


							<div class="dashboard-widget">
								<nav class="dashboard-menu">
									<ul>
										<li>
											{# <a href="{{path('app_RendezVous')}}"> #}
												<i class="fas fa-columns"></i>
												<span>Tableau de bord</span>
											{# </a> #}
										</li>


										<li class="active">
											<a href="{{path ('user_profile')}}">
												<i class="fas fa-user-cog"></i>
												<span>Paramètres de profil</span>
											</a>
										</li>

										<li>
											<a href="doctor-change-password.html">
												<i class="fas fa-lock"></i>
												<span>Changer le mot de passe</span>
											</a>
										</li>
										<li>
											<a href="{{path ('app_logout')}}">
												<i class="fas fa-sign-out-alt"></i>
												<span>Se déconnecter</span>
											</a>
										</li>
									</ul>
								</nav>
							</div>
						
					</div> {% endif %} 
					<!-- /Profile Sidebar -->

				</div>
			{% endblock %}

			<div
				class="col-md-7 col-lg-8 col-xl-9">

				<!-- Basic Information -->
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Basic Information</h4>
						<div class="row form-row">
							<div class="col-md-12">
								<div class="form-group">
									<div class="change-avatar">
										<div class="profile-img">
											<img src="{{asset ('assets2/img/patients/patient.jpg')}} " alt="User Image">
										</div>
										<div class="upload-img">
											<div class="change-photo-btn">
												<span>
													<i class="fa fa-upload"></i>
													Upload Photo</span>
												<input type="file" class="upload">
											</div>
											<small class="form-text text-muted">Allowed JPG, GIF or PNG. Max
																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																						size of 2MB</small>
										</div>
									</div>
								</div>
							</div>

							<div class="col-md-6">
								<div class="form-group">
									<label>name :
										<span class="text-danger"></span>
										{{ user.name }}
									</label>


								</div>
							</div>

							<div class="col-md-6">
								<div class="form-group">
									<label>lastname :
										<span class="text-danger"></span>
										{{ user.lastname }}
									</label>


								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Email :
										<span class="text-danger"></span>
										{{ user.email }}
									</label>


								</div>
							</div>
							

							<div class="submit-section">
								<button class="btn btn-primary submit-btn">
									<a href="{{path ('user_profile_edit',{id :user.id})}}">edit</a>

								</button>
							</div>


						</div>
					</div>
				</div>


			</div>
		</div>

	</div>

</div>{% endblock %}

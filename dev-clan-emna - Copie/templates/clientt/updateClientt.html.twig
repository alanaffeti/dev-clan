{% extends 'baseback.html.twig' %}

{% block body %}
     <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">edit client</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                        <label for="inputText" class="col-sm-4 col-form-label">name</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.name,{'attr':{'class':'form-control'}}) }}

                        </div>
                    

                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                        <label for="inputText" class="col-sm-4 col-form-label">lastname</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.lastname,{'attr':{'class':'form-control'}}) }}

                        </div>
                 

                    <label for="inputText" class="col-sm-4 col-form-label">adresse</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.adresse,{'attr':{'class':'form-control'}}) }}

                    </div>
                    

                    <label for="inputText" class="col-sm-4 col-form-label">email</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.email,{'attr':{'class':'form-control'}}) }}
                        </div>


                    <label for="inputText" class="col-sm-4 col-form-label">password</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.password,{'attr':{'class':'form-control'}}) }}
                        </div>
                
                    
                     
                      <label for="inputText" class="col-sm-4 col-form-label">Numero de téléphone</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.numTel,{'attr':{'class':'form-control'}}) }}
                        </div>
                      
                   
                      <label for="inputText" class="col-sm-4 col-form-label">genre</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.genre,{'attr':{'class':'form-control'}}) }}
                        </div>
                

                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.modifier,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}
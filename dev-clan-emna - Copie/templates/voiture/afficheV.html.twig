{% extends 'baseM2.html.twig' %}


{% block body %}
<div>


<form action="{{ path('fonc') }}" method="get">
                                <input type="text" name="q"  placeholder="Search...">
                                <button class="sr"></button>
                                    <style>
                                        .sr {
                                        background-color: #FFFFFF; /* Green */
                                        border: none;
                                        color: black;
                                        padding: 2px 6px;
                                        text-align: center;
                                        text-decoration: none;
                                        display: inline-block;
                                        font-size: 16px;
                                        margin: left;
                                        cursor: pointer;
                                        border-radius: 10px;
                                        box-shadow: 0px 4px 5px rgba(0, 0, 0, 0.2);
                                        }

                                        .sr:hover {
                                        background-color: #6A5ACD; /* Darker green */
                                        }
<style>
    .btn {
        background-color: #6A5ACD;
        color: #FFFFFF;
        font-size: 14px;
        padding: 5px 10px;
        border-radius: 5px;
        border: none;
        text-decoration: none;
        margin-right: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #483D8B;
    }

    .btn-danger {
        background-color: #DC143C;
    }

    .btn-danger:hover {
        background-color: #B22222;
    }
</style>
                                    </style>
                                <a href="{{ path('fonc') }}" class="btn btn-secondary">Clear</a>
                            </form>
                            </div>
<a href="{{ path('addBackcontrat') }}" class="btn btn-dark">
                    <i class="fas fa-edit"></i> Add new Contrat
                </a>
<table>
    <tr>
        <th>ID</th>
        <th>Marque</th>
        <th>Type de voiture</th>
        <th>Matricule</th>
        <th>Modele</th>
        <th>Datefabrication</th>
        <th>Type de carburant</th>
        <th>Kilometrage</th>
        <th>Etat</th>
        <th>Action</th>
    </tr>

    {% for i in pagination %}
        <tr>
            <td>{{i.id}}</td>
            <td>{{i.marque}}</td>
            <td>{{ i.typevoiture }}</td>
            <td>{{ i.matricule}}</td>
            <td>{{i.modele}}</td>
            <td>{{i.datefabrication ? i.datefabrication|date('Y-m-d H:i:s') : ''}}</td>
            <td>{{i.typecarburant}}</td>
            <td>{{i.kilometrage()}}</td>
            <td>{{i.etat}}</td>
            <td>
                <button type="button" onclick="if(confirm('Are you sure?')){window.location.href='{{path('suppVoiture',{'id':i.id})}}'}">
                    <i class="fas fa-trash"></i> Delete
                </button>


             
                </a>
                <a href="{{ path('viewContrats', {'id': i.id}) }}" >
                    <i class="fas fa-eye"></i> Contracts
                </a>
                <a href="{{ path('voiture_edit', {'id': i.id}) }}" >
                    <i class="fas fa-edit"></i> Edit
                </a>
                
               
            </td>
        </tr>
    {% endfor %}
    
</table>

<div class="pagination">
    {{knp_pagination_render(pagination)}}
    </div>

{% endblock %}




